<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <display-name>LaboratoryV20 WelcomePage</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <description></description>
        <display-name>My Controller</display-name>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.niptis.LaboratoryV20.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/MyController</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>Charset Filter</filter-name>
        <filter-class>com.niptis.LaboratoryV20.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>Charset Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <listener>
        <listener-class>
            com.niptis.LaboratoryV20.listener.ProjectRequestListener
        </listener-class>
    </listener>

    <listener>
        <listener-class>
            com.niptis.LaboratoryV20.listener.ConnectionPoolInitializer
        </listener-class>
    </listener>
</web-app>